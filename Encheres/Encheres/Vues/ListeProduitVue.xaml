<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Encheres.Vues.ListeProduitVue"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

            <Image Source="Logo.png" WidthRequest="180" HeightRequest="180"></Image>
            

                <Entry Placeholder="Username" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Entry Placeholder="Password" IsPassword="True" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Button
            VerticalOptions="Center"
            Text="se Connecter"
            TextColor="Black"
            BackgroundColor="Transparent"
            BorderWidth="1.5"
            CornerRadius="50"
        ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>